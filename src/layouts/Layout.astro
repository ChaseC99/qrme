---
let { 
	frontmatter,
	title = "QR Me - Contact", 
	pageDescription = "Quickly and easily share your contact information with a QR Code.",
	showNavbar = true,
	backgroundColor = "#fff",
} = Astro.props;

var isMarkdownPage = false
if (frontmatter && frontmatter.title) {
	isMarkdownPage = true;
	title = frontmatter.title;
}

import Navbar from '../components/Navbar.astro';
---
<!doctype html>
<html lang="en">
	<head>
		<title>{title}</title>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" href="/logo.png">
		
		<!-- Meta Tags -->
        <meta name="description" content={pageDescription}>
        <meta name="keywords" content="QR Me Contact, QR Contact, QR Me, Digitial Business Card, vCard, Virtual Business Card">
        <meta property="og:url" content="https://qrme.contact">
        <meta property="og:type" content="website">
        <meta property="og:title" content={title}>
        <meta property="og:description" content={pageDescription}>
        <meta name="twitter:card" content="summary">
        <meta name="twitter:title" content={title}>
        <meta name="twitter:description" content={pageDescription}>
        <meta name="twitter:image" content="https://qrme.contact/logo.png">

		<!-- Google Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="">
        <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
	</head>
	<body style={`background-color: ${backgroundColor};`}>
		{showNavbar && <Navbar />}
		<div class={isMarkdownPage ? 'padded' : ''} >
			<slot />
		</div>
	</body>
</html>

<style is:global>
	html {
		scroll-behavior: smooth;
	}

	body {
		font-family: 'Montserrat', sans-serif;
		margin: 0;
	}

	h1 {
		font-size: 3em;
	}

	h2 {
		font-size: 2em;
	}

	h3 {
		font-size: 1.5em;
	}

	b {
		text-decoration: underline;
	}

	.padded {
		padding: 0 16px;
	}

	@media only screen and (max-width: 500px) {
		h1 {
			font-size: 2em
		}
	}
</style>
